<article>
  <header class="navbar navbar-default">
    <div  class="navbar-text">
      <b>
        <%= @project.name %>
      </b>
      <span>
        [<%= @tickets.length %>]
      </span>
    </div>
    <div class="navbar-text">
      <%= link_to 'New task', tickets_new_path, class: 'navbar-link' %>
    </div>
  </header>
  <div>
    <% Ticket.state_machine.states.map.each do |state| %>
        <section class="col-md-3" >
            <div class="text-center text-info table-bordered">
                <%= state.name %>
            </div>
            <br>
            <div class="text-center">
            <% @tickets.each do |ticket| %>
                <% if ticket.state == state.name.to_s %>
                    <div class="label label-success col-md-12" style="padding: 10px;margin-bottom: 10px;">
                        <span>
                            <%= link_to ticket.title, ticket, style: 'color:#fff;' %>
                        </span>
                    </div>
                <% end %>
            <% end %>
            </div>
        </section>
    <% end %>
  </div>

