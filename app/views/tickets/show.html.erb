<header class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <b class="navbar-brand">
          <%=link_to @ticket.name, '/projects/'+@ticket.project_id.to_s %>
        </b>
        <b class="navbar-text">
          <%= @ticket.title %>
        </b>
      </div>
      <ul class="nav navbar-nav pull-right">
        <li>
          <%= link_to 'Change', edit_ticket_path(@ticket), class: 'btn btn-success' %>
        </li>
      </ul>
    </div>
</header>
<section class="col-md-offset-1 col-md-10 form-group">
    <div><label>Description:</label> <%= @ticket.description %></div>
    <div><label>Current state:</label> <span class="label label-success"><%= @ticket.state %></span></div>
    <hr>
    <div><label>Created at:</label><%= @ticket.created_at %></div>
    <div><label>Modified at:</label><%= @ticket.updated_at %></div>
    <hr>
    <div><label>Creator:</label><%= @creator.name %></div>
    <div><label>Worker:</label><%= @worker.name %></div>
    <hr>
</section>